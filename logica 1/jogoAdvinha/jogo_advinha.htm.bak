<meta charset="UTF-8">


<script>

	function pulaLinha() {
	
		document.write("<br>");
		document.write("<br>");
	}

	function mostra(frase) {
	
		document.write(frase);
		pulaLinha();
	}
	
	var numeroPensado = 5;
	var chute = parseInt(prompt("Digite seu chute!"));
	
	if(chute == numeroPensado) {
		mostra("Voçê acertou!");
	}
	
	if(chute != numeroPensado) {
		mostra("Voçê errou, o numero pensado foi " + numeroPensado);
	}
	
</script>	