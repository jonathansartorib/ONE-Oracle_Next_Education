<meta charset="UTF-8">


<script>

	function pulaLinha() {
	
		document.write("<br>");
		document.write("<br>");
	}


	function mostra(frase) {
	
		document.write(frase);
		pulaLinha();
	}
	
	
	//++O prompt sempre retorna texto nao numero++
	
	//var vitorias = prompt("Entre com o numero de vitorias");
	//var empates = prompt("Entre com o numero de empates");
	//var pontos = vitorias * 3 + empates;
	//mostra("Os pontos do seu time são: " + pontos);
	
	//nesse contexto o resultado sera a concatenacao de duas strings
	 
	 
	 //++O prompt sempre retorna texto nao numero++
	 
	var vitorias = parseInt(prompt("Entre com o numero de vitorias"));//parseInt para transformar
	var empates = parseInt(prompt("Entre com o numero de empates"));//de String para number
	var pontos = (vitorias * 3) + empates;
	
	mostra("Os pontos do seu time são: " + pontos);
	
	if(pontos > 28) {
		mostra("Seu time esta melhor do que o ano passado.");
	}	
	
	if(pontos < 28) {
		mostra("Seu time esta pior do que o ano passado.");
	}
	
	if(pontos == 28) {
		mostra("Seu time esta igual ao que o ano passado.");
	}
	
	
	
</script>